{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "inlineSourceMap": true,
    "lib": ["es2017", "es2019", "DOM.Iterable", "DOM", "esnext"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
